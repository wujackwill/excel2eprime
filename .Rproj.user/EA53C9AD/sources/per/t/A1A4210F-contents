check_install_readxl <- function() {
  if (!requireNamespace("readxl", quietly = TRUE)) {
    message("Installing 'readxl' package...")
    install.packages("readxl")
    message("The 'readxl' package has been installed.")
  } else {
    message("The 'readxl' package is already installed.")
  }
}



sepnom <- function(path){
  check_install_readxl()
  a <- read_excel(path)

  words <- str_split(a[[col_name]], ' ')
  words

  for  (m in seq_len(nrow(a))) {
    w = 1
    index  = 1
    while (w <= length(words[[m]])){
      col = paste("w", w, sep = "")
      a[m,col] <- words[[m]][index]
      w = w + 1
      index  = index + 1
    }
  }

  return (a)
}
